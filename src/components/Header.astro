---
import { SITE_TITLE } from '../consts'
---

<header class="px-4 py-5 border-b-2 border-b-black mb-5">
  <nav class="max-w-5xl flex items-center mx-auto">
    <a href="/" class="relative group">
      <div
        class="absolute inset-0 transition-transform group-hover:translate-x-2 group-hover:translate-y-1.5 rounded-2xl bg-black"
      >
      </div>
      <p
        class="relative text-3xl font-bold z-[1] px-4 py-2 bg-white rounded-2xl border-2 border-black"
      >
        {SITE_TITLE}
      </p>
    </a>
  </nav>
</header>
